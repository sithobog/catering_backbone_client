<div class="pre-order">
	<div class="accordion">
		{{#each days}}
			<p class="day_name">{{day_of_week day_number}}</p>
			<div class="clearfix day_order {{day_of_week day_number}}">
				<p class="pull-left">Order total:<span class="order_total"></span> </p>
				<p class="pull-right">Left: <span class="remaining_balance">{{max_total}}</span></p>
			</div>
		{{/each}}
	</div>
	<button class="previous btn btn-default">Previous day</button>
	<button class="next btn btn-default">Next day</button>
</div>
